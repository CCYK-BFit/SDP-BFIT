        <TextView
            android:id="@+id/profile_editprofile_txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:text="Name"
            android:textColor="@color/grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintBottom_toTopOf="@id/profile_editprofile_edittxtName"/>

        <EditText
            android:id="@+id/profile_editprofile_edittxtName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_txtName" />

        <TextView
            android:id="@+id/profile_editprofile_txtWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:text="Weight"
            android:textColor="@color/grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_edittxtName" />

        <EditText
            android:id="@+id/profile_editprofile_edittxtWeight"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Weight (kg)"
            android:inputType="number"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.704"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_txtWeight" />

        <TextView
            android:id="@+id/profile_editprofile_txtHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:text="Height"
            android:textColor="@color/grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_edittxtWeight" />

        <EditText
            android:id="@+id/profile_editprofile_edittxtHeight"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Height (cm)"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.704"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_txtHeight" />

        <Button
            android:id="@+id/profile_editprofile_btnSave"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_green"
            android:fontFamily="@font/roboto"
            android:text="Save"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:backgroundTint="@color/green"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="@id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_edittxtHeight" />

        <Button
            android:id="@+id/profile_editprofile_btnCancel"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_green_border"
            android:fontFamily="@font/roboto"
            android:text="Cancel"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/green"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/card_editprofile1"
            app:layout_constraintHorizontal_bias="0.78"
            app:layout_constraintStart_toStartOf="@+id/card_editprofile1"
            app:layout_constraintTop_toBottomOf="@+id/profile_editprofile_edittxtHeight" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>